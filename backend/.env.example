# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# For Local Development: mongodb://localhost:27017/api-tester
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/api-tester
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/api-tester

# Server Configuration
PORT=5000

# Node Environment
# development = nodemon with detailed logging
# production = optimized for deployment
NODE_ENV=production

# Security Secret for JWT/Sessions
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-a-secure-random-string-of-at-least-32-characters

# Optional: CORS Configuration
# CORS_ORIGIN=https://yourdomain.com
